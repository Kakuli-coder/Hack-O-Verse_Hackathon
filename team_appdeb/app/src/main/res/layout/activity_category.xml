<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category"
    android:background="@drawable/p1">

    <ImageView
        android:id="@+id/student"
        android:layout_width="98dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082"
        app:srcCompat="@drawable/student" />

    <ImageView
        android:id="@+id/staff"
        android:layout_width="98dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348"
        app:srcCompat="@drawable/staff" />

    <ImageView
        android:id="@+id/visitor"
        android:layout_width="98dp"
        android:layout_height="103dp"
        android:layout_marginBottom="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.219"
        app:srcCompat="@drawable/visitor"
        tools:ignore="UnknownId" />

    <ImageView
        android:id="@+id/police"
        android:layout_width="98dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visitor"
        app:layout_constraintVertical_bias="0.483"
        app:srcCompat="@drawable/police" />

    <Button
        android:id="@+id/studentbtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="STUDENT"
        android:background="#0FE418"
        app:layout_constraintBottom_toTopOf="@+id/staffbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toEndOf="@+id/student"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <Button
        android:id="@+id/staffbtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        android:background="#0FE418"
        android:text="STAFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/staff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

    <Button
        android:id="@+id/visitorbtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="124dp"
        android:background="#10EB19"
        android:text="VISITOR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/visitor"
        app:layout_constraintTop_toBottomOf="@+id/staffbtn"
        app:layout_constraintVertical_bias="0.031" />

    <Button
        android:id="@+id/policebtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:background="#0FE418"
        android:text="CAMPUS
        POLICE"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toEndOf="@+id/police"
        app:layout_constraintTop_toBottomOf="@+id/visitorbtn"
        app:layout_constraintVertical_bias="0.515" />
</androidx.constraintlayout.widget.ConstraintLayout>